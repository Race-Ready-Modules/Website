{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["global.d.ts", "env.d.ts", "src/**/*", "src/**/*.vue"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "lib": ["es2022", "dom"],
        "module": "es2022",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    }
}
